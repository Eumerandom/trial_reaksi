{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Laravel: Serve",
			"type": "shell",
			"command": "php artisan serve",
			"group": "none",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new",
				"focus": false
			}
		},
		{
			"label": "NPM: Dev",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"problemMatcher": [],
